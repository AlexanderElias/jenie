{
	"name": "ure",
	"version": "1.9.0",
	"description": "A mighty tinny web components framework/library",
	"main": "dist/ure.min.js",
	"scripts": {
		"build-docs": "rm -r docs/* && muleify pack web docs",
		"serve": "muleify serve -sw web dev",
		"watch": "muleify pack -p src -wb src/index.js web/assets/ure.js",
		"bd": "muleify pack -b src/index.js dist/ure.js",
		"bm": "muleify pack -bm src/index.js dist/ure.min.js",
		"cm": "!cat header.txt dist/ure.min.js > dist/ure.min.js",
		"bp": "cat dist/webcomponents-lite.min.js dist/ure.min.js > dist/ure.polly.min.js",
		"ba": "npm run bd && npm run bm && npm run bp"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AlexanderElias/ure.git"
	},
	"author": "Alexander Elias",
	"license": "MPL-2.0",
	"bugs": {
		"url": "https://github.com/AlexanderElias/ure/issues"
	},
	"homepage": "https://github.com/AlexanderElias/ure#readme",
	"keywords": [
		"web",
		"component",
		"components",
		"web-components",
		"js",
		"html",
		"css",
		"framework",
		"data-binding",
		"data",
		"binding",
		"routing",
		"router",
		"http",
		"front-end",
		"x-tag",
		"polymer"
	],
	"directories": {
		"doc": "docs"
	},
	"dependencies": {},
	"devDependencies": {
		"node-es-module-loader": "^0.3.8"
	}
}
